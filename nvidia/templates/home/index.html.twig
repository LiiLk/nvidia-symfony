{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4 back-black">
        <table class="table table-black text-white">
            <thead>
            {# <th scope="col">id</th> #}
            <th scope="col">Carte Graphique</th>
            <th scope="col">Description</th>
            <th scope="col">Prix</th>
            {# <th>Coeurs nvidia</th> #}
            {# <th>Frequence boost</th> #}
            {# <th>Capacite memoire</th> #}
            {# <th>Type memoire</th> #}
            {# <th>Taille memoire</th> #}
            {# <th>Resolution Numerique Max</th> #}
            {# <th>Longueur</th> #}
            {# <th>Largeur</th> #}
            <th scope="col">Détails</th>
            <th scope="col">Actions</th>
            </thead>

            {% for produit in produits %}

                <tbody>
                <tr>
                    {# <td>{{ produit.id }}</td> #}
                    <td>{{ produit.NomProduit }}</td>
                    <td>{{ produit.descriptionProduit }}</td>
                    <td>{{ produit.prixProduit }} €</td>
                    {# <td>{{ produit.coeursNvidia}}</td> #}
                    {# <td>{{ produit.frequenceBoost}}</td> #}
                    {# <td>{{ produit.capaciteMem}}</td> #}
                    {# <td>{{ produit.typeMem}}</td> #}
                    {# <td>{{ produit.tailleIntMem}}</td> #}
                    {# <td>{{ produit.resolutionNumMax}}</td> #}
                    {# <td>{{ produit.longueurProduit}}</td> #}
                    {# <td>{{ produit.largeurProduit}}</td> #}
                    <td>
                        <a href="{{ path('details', {id: produit.id}) }}" class="btn btn-outline-success" style="color: #76FF03">Détails</a>
                    </td>
                    <td>
                        <a href="{{ path('editproduit', {id: produit.id}) }}" class="btn btn-outline-success" style="color: #76FF03" style="display:inline-block">Editer</a>
                        <a href="{{ path('supprimerproduit', {id: produit.id}) }}" class="btn btn-outline-danger" style="color: #bd2130" style="display:inline-block">Supprimer</a>
                    </td>
                </tr>
                </tbody>
            {% endfor %}

        </table>

        <div class="text-right">
            <a href="{{ path('ajoutproduit') }}" class="btn btn-outline-success mt-3" style="color: #76FF03">Créer un produit</a>
        </div>
    </div>

{% endblock %}
